html
  font-size 16px

body
  font-family: 'Roboto Mono', monospace;
  margin 0

.container
  max-width 1440px
  box-sizing border-box
  width 100%
  margin 0 auto
  padding 0 55px
  @media (max-width: 768px)
    padding 0 clamp(16px, 8vw, 55px)
  @media (max-width: 520px)
    padding 0 clamp(16px, 3vw, 55px)
  &_secondary
    max-width 1220px
  &_minor
    max-width 1310px
    padding-left 10px

.button
  &__secondary
    padding 24px 59px
    color #4DCCBD
    white-space nowrap
    border: 2px solid #4DCCBD;
    box-sizing: border-box;
    font-family: 'Roboto Mono',monospace;
    font-weight 700
    background-color transparent
    line-height 1rem
    border-radius: 32px;
    font-size 1rem
    cursor pointer
    margin 24px 0
  &__primary
    box-sizing border-box
    padding 24px 63px
    background: #4DCCBD;
    border none
    outline none
    font-family: 'Roboto Mono',monospace;
    color #fff
    cursor: pointer;
    font-size: 20px;
    line-height: 24px;
    border-radius: 40px
    @media (max-width: 400px)
      width 100%
      text-align center
      padding 24px 30px

.heading
  font-family: 'Montserrat', sans-serif;
  color #201F43
  margin 0
  font-weight: 700;
  font-size: clamp(40px, 3.5vw, 48px)
  line-height: 56px
  @media(max-width 768px)
    line-height 36px
    font-size clamp(32px, 3.5vw, 40px)

.input
  border: 2px solid #3D3C69;
  box-sizing: border-box;
  border-radius: 8px;
  padding 22px 30px
  outline none
  width 100%
  color #201F43
  font-family 'Roboto Mono',monospace
  background-color #F7FAFC
  font-size: 1.3rem;
  line-height: 1.4rem;
  &::placeholder
    color: rgba(61, 60, 105, 0.5);