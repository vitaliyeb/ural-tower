div.main-preview
  display grid
  grid-template-columns clamp(511px, 50vw , 615px) 360px
  justify-content space-between
  box-sizing border-box
  gap 20px
  padding-top clamp(20px, 5vw, 60px)
  padding-bottom clamp(50px, 13vw, 179px)
  @media(max-width 1000px)
    gap 110px
    display flex
    flex-direction column
    align-items center
  &__wrapper
    background-image url("./../../public/images/gecsagan.svg")
    background-repeat no-repeat
    background-position 120% center
    @media(max-width 1100px)
      background-position 160% center
    @media(max-width 1000px)
      background-size 100% 70%
      background-position center bottom
    @media(max-width 768px)
      background-position -91% 117%
      background-size auto
  @media(max-width 650px)
    grid-template-columns 1fr
    gap 55px
  &__info
    margin-top clamp(20px, 5vw, 60px)
    & p
      font-size: 20px
      margin 32px 0 30px 0
      line-height: 24px;
      @media(max-width 650px)
        font-size clamp(16px, 4vw, 20px)
